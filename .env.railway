# ============================================================================
# RAILWAY ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy these variables to your Railway service configuration
# Replace placeholder values with your actual values
# ============================================================================

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# SECRET_KEY - REQUIRED - Generate a secure random key (50+ characters)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-50-CHARS-MIN

# DEBUG - Set to False in production
DEBUG=False

# ALLOWED_HOSTS - Comma-separated list of allowed domains
# Include your Railway domain (e.g., your-app.railway.app)
ALLOWED_HOSTS=.railway.app,yourdomain.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# USE_POSTGRES - Set to True for Railway (uses PostgreSQL)
USE_POSTGRES=True

# DATABASE_URL - Railway provides this automatically when you add PostgreSQL
# Format: postgresql://user:password@host:port/dbname
# Leave this empty - Railway will auto-populate it
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Individual database variables (Railway auto-populates from Postgres service)
DB_NAME=${{Postgres.PGDATABASE}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching and Celery)
# ============================================================================

# If you add Redis service to Railway, use these:
REDIS_HOST=${{Redis.REDIS_HOST}}
REDIS_PORT=${{Redis.REDIS_PORT}}

# Or use Railway's Redis URL if provided:
# REDIS_URL=${{Redis.REDIS_URL}}

# Default fallback (if not using Redis):
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ============================================================================
# CORS SETTINGS
# ============================================================================

# CORS_ALLOWED_ORIGINS - Frontend URLs that can access the API
# Add your frontend Railway domain (e.g., https://frontend.railway.app)
# Multiple origins separated by commas (NO SPACES)
CORS_ALLOWED_ORIGINS=https://your-frontend.railway.app,https://www.yourdomain.com

# ============================================================================
# JWT TOKEN SETTINGS
# ============================================================================

# JWT_ACCESS_TOKEN_LIFETIME - Access token lifetime in minutes (default: 15)
JWT_ACCESS_TOKEN_LIFETIME=15

# JWT_REFRESH_TOKEN_LIFETIME - Refresh token lifetime in minutes (default: 7 days = 10080)
JWT_REFRESH_TOKEN_LIFETIME=10080

# ============================================================================
# STATIC FILES
# ============================================================================

# Static files are handled by WhiteNoise - no additional config needed
# Ensure collectstatic runs during build (configured in railway.toml)

# ============================================================================
# OPTIONAL: CUSTOM SETTINGS
# ============================================================================

# Custom domain (if using)
# CUSTOM_DOMAIN=yourdomain.com

# Email settings (if using email features)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Sentry (error tracking - optional)
# SENTRY_DSN=https://your-sentry-dsn

# ============================================================================
# NOTES FOR RAILWAY SETUP:
# ============================================================================
#
# 1. DO NOT copy this file directly to Railway - set variables in Railway UI
# 2. Railway variables support referencing other services: ${{ServiceName.VARIABLE}}
# 3. Generate SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 4. After adding PostgreSQL service, Railway auto-creates database variables
# 5. Update CORS_ALLOWED_ORIGINS after deploying frontend
# 6. Set DEBUG=False for production
#
# ============================================================================
